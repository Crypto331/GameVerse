<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GameVerse" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg</item>
        <item name="colorPrimaryVariant">@color/bg</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="background">@color/blue_background_night</item>
        <item name="colorSurface">@color/bg</item>
        <item name="colorOnSurface">@color/pink_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.GameVerse.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GameVerse" parent="Base.Theme.GameVerse" />

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSizeBottomRight">40dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
    </style>

    <style name="BackgroundTheme">
        <item name="android:background">@color/blue_background_night</item>
    </style>
</resources>